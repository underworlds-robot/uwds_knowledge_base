<?xml version="1.0"?>
<launch>
  <arg name="output" default="screen"/>
  <arg name="respawn" default="false"/>
  <arg name="start_manager" default="false"/>
  <arg name="start_server" default="false"/>
  <arg name="nodelet_manager" default=""/>
  <arg name="launch-prefix" default=""/>

  <node name="uwds_server"
        pkg="nodelet" type="nodelet"
        args="load uwds/UwdsServerNodelet $(arg nodelet_manager)"
        respawn="$(arg respawn)"
        output="$(arg output)"
        launch-prefix="$(arg launch-prefix)"
        if="$(arg start_server)"/>

  <param name="data_dir" value="$(find uwds_knowledge_base)/res/data"/>
  <node name="sparql_translater" pkg="uwds_knowledge_base" type="sparql_translater.py"/>
  <node name="uwds_knowledge_base"
        pkg="uwds_knowledge_base" type="sparql_translater.py"
        respawn="$(arg respawn)"
        output="$(arg output)"
        launch-prefix="$(arg launch-prefix)">
    <rosparam subst_value="true">
      data_dir : $(find uwds_knowledge_base)/res/data
      verbose : false
    </rosparam>
  </node>
</launch>
